<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" method="upgrade">
    <name>Content - BR Simple Videos</name>
    <author>Janderson Moreira</author>
    <creationDate>February 2026</creationDate>
    <copyright>Copyright (c) 2026 Janderson Moreira.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>jandersonmm@gmail.com</authorEmail>
    <authorUrl>https://github.com/jandersk8</authorUrl>
    <version>1.0.0</version>
    <description>PLG_CONTENT_BR_SIMPLE_VIDEOS_XML_DESCRIPTION</description>

    <namespace path="src">BrSimple\Plugin\Content\Videos</namespace>

    <files>
        <folder>language</folder>
        <folder>services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <filename plugin="br_simple_videos">br_simple_videos.xml</filename>
        <filename>update.xml</filename>
        <filename>LICENSE.txt</filename>
    </files>

    <updateservers>
        <server type="extension" priority="1" name="BR Simple Videos Updates">https://raw.githubusercontent.com/jandersk8/plg_br_simple_videos/main/update.xml</server>
    </updateservers>

    <config>
        <fields name="params">
            <fieldset name="basic" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_BASIC_SETTINGS">
                
                <field name="max_width" type="text" default="100%" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_MAX_WIDTH_LABEL" description="PLG_CONTENT_BR_SIMPLE_VIDEOS_MAX_WIDTH_DESC" />
                
                <field name="alignment" type="list" default="center" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_ALIGN_LABEL">
                    <option value="left">PLG_CONTENT_BR_SIMPLE_VIDEOS_LEFT</option>
                    <option value="center">PLG_CONTENT_BR_SIMPLE_VIDEOS_CENTER</option>
                    <option value="right">PLG_CONTENT_BR_SIMPLE_VIDEOS_RIGHT</option>
                </field>

                <field name="aspect_ratio" type="list" default="16/9" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_RATIO_LABEL">
                    <option value="16/9">16:9 (Widescreen)</option>
                    <option value="4/3">4:3 (Classic)</option>
                    <option value="1/1">1:1 (Square)</option>
                    <option value="9/16">9:16 (Vertical/Shorts)</option>
                </field>

                <field name="autoplay" type="radio" default="0" layout="joomla.form.field.radio.switcher" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_AUTOPLAY_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="cinema_mode" type="radio" default="0" layout="joomla.form.field.radio.switcher" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_CINEMA_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="lazy_load" type="radio" default="1" layout="joomla.form.field.radio.switcher" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_LAZY_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="youtube_nocookie" type="radio" default="1" layout="joomla.form.field.radio.switcher" label="PLG_CONTENT_BR_SIMPLE_VIDEOS_NOCOOKIE_LABEL" description="PLG_CONTENT_BR_SIMPLE_VIDEOS_NOCOOKIE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>